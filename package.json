{
  "name": "mbed-simulator",
  "version": "1.9.2",
  "description": "Mbed OS 5 simulator",
  "preferGlobal": true,
  "scripts": {
    "build:dockerimage-clean": "docker build -t simulator-image .",
    "build:dockerimage": "docker image inspect -f '.' simulator-image || npm run build:dockerimage-clean",
    "init": "npm run build:dockerimage && docker run --rm -e INIT=1 -e UID=001 -v %cd%:/src simulator-image",
    "build": "docker run --rm -e UID=001 -v %cd%:/src simulator-image && echo 'Output files can be found in /micropython-simulator/BUILD/SIMULATOR/'",
    "build:full": "(rm mbed-simulator-hal/libmbed.bc || true) && npm run build",
    "wipe-dependencies": "sh wipe-dependencies.sh || true",
    "serve": "node cli.js micropython-simulator --skip-build --launch"
  },
  "bin": {
    "mbed-simulator": "cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microbit-foundation/microbit-simulator.git"
  },
  "keywords": [
    "mbed",
    "simulator"
  ],
  "author": "Jan Jongboom <jan.jongboom@arm.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/janjongboom/mbed-simulator/issues"
  },
  "homepage": "https://github.com/janjongboom/mbed-simulator#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "command-exists": "^1.2.2",
    "commander": "^2.15.1",
    "compression": "^1.7.3",
    "es6-promisify": "^6.1.1",
    "express": "^4.16.2",
    "getmac": "^1.4.1",
    "hbs": "^4.0.1",
    "opn": "^5.3.0",
    "puppeteer": "^1.11.0",
    "socket.io": "^2.1.0",
    "timesync": "^1.0.2",
    "xterm": "^3.3.0"
  }
}
